module.exports = {
    onCreate: function (d, v, namedArgs, projectName) {
        //Update the package.json with the projectName.
        var packageInfo = JSON.parse(v.read('package.json'));
        packageInfo.name = projectName;
        v.write('package.json', JSON.stringify(packageInfo, null, '  '));

        //Remove this volofile.
        v.rm('volofile');

        d.resolve();
    }
};